@model Tag
@{ Layout = "~/Views/Shared/ModalLayout.cshtml"; }

<div class="modal-content">
    <form method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" data-ng-click="close()"></button>
            <h4 class="modal-title">Edit {{ data.Label }}</h4>
        </div>
        <div class="modal-body">
            @Html.EditorForModel()
        </div>
        <div class="modal-footer">
            <div class="pull-left">
                <button title="@Resources.Global.Delete" value="@Resources.Global.Delete" class="btn btn-default fa @FontAwesome.Trash" type="button" data-ng-click="delete(data.Id)" />
            </div>
            <div class="pull-right">
                <button title="@Resources.Global.Save" value="@Resources.Global.Save" class="btn btn-default fa @FontAwesome.Save" type="button" data-ng-click="save()" />
                <button title="@Resources.Global.Close" value="@Resources.Global.Close" class="btn btn-default fa @FontAwesome.Close" type="button" data-ng-click="cancel()" />
            </div>
        </div>
    </form>
</div>