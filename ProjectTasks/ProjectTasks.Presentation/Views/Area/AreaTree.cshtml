@{ Layout = "~/Views/Shared/ModalLayout.cshtml"; }

<div class="modal-content">
    <form method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" data-ng-click="close()"></button>
            <h4 class="modal-title">Select parent area</h4>
        </div>
        <div class="modal-body">
            <js-tree tree-data="json" tree-src="/Area/GetAllReferential/{{id}}" tree-events="changed:select"></js-tree>
        </div>
        <div class="modal-footer">
            <div class="pull-right">

                <button title="@Resources.Global.Cancel" value="@Resources.Global.Cancel" class="btn btn-default fa @FontAwesome.Undo" type="button" data-ng-click="cancel()" />
            </div>
        </div>
    </form>
</div>
